<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textViewPlayMusicIndex"
            android:text="1"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffff"
            android:textSize="17sp" />

        <TextView
            android:textColor="#ffff"
            android:text="Tên ca khúc"
            android:singleLine="true"
            android:maxWidth="250dp"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textViewPlayMusicIndex"
            android:layout_marginLeft="10dp"
            android:id="@+id/textViewPlayMusicName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:textSize="12sp"
            android:textColor="#ffff"
            android:text="Ca si"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_toRightOf="@id/textViewPlayMusicIndex"
            android:layout_marginLeft="10dp"
            android:layout_below="@id/textViewPlayMusicName"
            android:id="@+id/textViewPlayMusicCaSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </TextView>
    </RelativeLayout>
</RelativeLayout>